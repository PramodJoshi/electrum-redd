#:import VERSION electrum_redd.version.ELECTRUM_VERSION

Popup:
    title: _("About Electrum-Redd")
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Version')
                size_hint_x: 0.4
            TopLabel:
                text: VERSION
                size_hint_x: 0.6
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "MIT Licence"
                size_hint_x: 0.6
            TopLabel:
                text: _('Homepage')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://wallets.reddcoin.com[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://wallets.reddcoin.com")
                size_hint_x: 0.6
            TopLabel:
                text: _('Developers')
                size_hint_x: 0.4
            TopLabel:
                text: '\n'.join(['John (Gnasher) Nash', 'Reddcoin Developers','Thomas Voegtlin', 'SomberNight'])
                size_hint_x: 0.6
            TopLabel:
                text: _('Distributed by:')
                padding: '0dp', '20dp'
                size_hint_x: 0.4
            TopLabel:
                text: _('Reddcoin')
                padding: '0dp', '20dp'
                size_hint_x: 0.6
        Widget:
            size_hint: None, 0.5
        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Widget:
                size_hint: 0.5, None
                height: '48dp'
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('Close')
                on_release: root.dismiss()
